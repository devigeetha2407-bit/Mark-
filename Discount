#include <stdio.h>

int main(void) {
    float amount;

    // Input purchase amount
    printf("Enter total purchase amount: ");
    scanf("%f", &amount);

    // Check discount eligibility
    if (amount >= 5000) {
        printf("Customer is eligible for a discount.\n");
    } else {
        printf("Customer is not eligible for a discount.\n");
    }

    return 0;
}
