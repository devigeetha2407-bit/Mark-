#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int count;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); // read string with spaces

    // Remove newline character if present
    str[strcspn(str, "\n")] = 0;

    // Calculate length
    count = strlen(str);

    // Display result
    printf("Number of characters in the string = %d\n", count);

    return 0;
}
