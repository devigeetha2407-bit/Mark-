#include <stdio.h>

int main() {
    int n, i;
    int arr1[100], arr2[100];

    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Read elements into first array
    for(i = 0; i < n; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &arr1[i]);
    }

    // Copy elements from arr1 to arr2
    for(i = 0; i < n; i++) {
        arr2[i] = arr1[i];
    }

    // Display first array
    printf("\nElements of first array:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr1[i]);
    }

    // Display second array
    printf("\nElements of second array (after copy):\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr2[i]);
    }

    return 0;
}
