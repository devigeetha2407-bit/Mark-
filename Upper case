#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char str[100];

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = 0; // remove newline

    // Convert to uppercase
    for(int i = 0; i < strlen(str); i++) {
        str[i] = toupper(str[i]);
    }

    // Display result
    printf("Uppercase string: %s\n", str);

    return 0;
}
