#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int length;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = 0; // remove newline character

    // Calculate length
    length = strlen(str);

    // Display result
    printf("Length of the string = %d\n", length);

    return 0;
}
