#include <stdio.h>

int main() {
    float sales[7];
    float total = 0;

    // Input sales for 7 days
    printf("Enter sales for 7 days:\n");
    for(int i = 0; i < 7; i++) {
        printf("Day %d sales: ", i + 1);
        scanf("%f", &sales[i]);
        total = total + sales[i];
    }

    // Display total weekly sales
    printf("\nTotal Weekly Sales = %.2f\n", total);

    return 0;
}
