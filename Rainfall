#include <stdio.h>

int main() {
    int n;
    float rainfall[12], total = 0, average;

    // Input number of months
    printf("Enter the number of months: ");
    scanf("%d", &n);

    // Input rainfall for each month
    for(int i = 0; i < n; i++) {
        printf("Enter rainfall for month %d (in mm): ", i + 1);
        scanf("%f", &rainfall[i]);
        total += rainfall[i];
    }

    // Calculate average rainfall
    average = total / n;

    // Display result
    printf("\nTotal Rainfall   = %.2f mm\n", total);
    printf("Average Rainfall = %.2f mm\n", average);

    return 0;
}
