#include <stdio.h>

int main(void) {
    int number;

    // Input number
    printf("Enter a number: ");
    scanf("%d", &number);

    // Check even or odd
    if (number % 2 == 0) {
        printf("%d is an even number.\n", number);
    } else {
        printf("%d is an odd number.\n", number);
    }

    return 0;
}
